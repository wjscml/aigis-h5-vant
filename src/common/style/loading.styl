.ajax-loading{
    display: none;
    .loading{
      position: fixed;
      top: 50%;
      left: 50%;
      width: 55%;
      transform: translate(-50%, -50%);
      height: 60px;
      line-height: 60px;
      background: rgba(109, 81, 255, 0.7);
      border-radius: 6px;
      text-align: center;
      z-index: 9999;
      color:#fff;
      img{
        width: 24px;
        vertical-align: middle;
      }
      span{
        margin-left: 14px;
        font-size: 14px;
      }
    }
    .overlay{
      position: fixed;
      left: 0;
      right: 0;
      top: 0;
      bottom: 0;
      z-index: 9998;
      background: rgb(255, 255, 255);
      opacity: 0.15;
    }
}