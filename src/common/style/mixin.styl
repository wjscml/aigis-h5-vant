border-2px($color)
  position relative
  &:before
    display block
    position absolute
    left 0
    bottom 1px
    width: 100%
    border-top: 3px solid $color
    content: ''
border-1px($color)
  position relative
  &:after
    display block
    position absolute
    left 0
    bottom 0
    width: 100%
    border-top: 1px solid $color
    content: ''

// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px
